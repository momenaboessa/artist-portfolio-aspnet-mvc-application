@model Ibrahim_Belal.Models.Service
@{
    ViewBag.Title = "ServiceForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Id == 0)
{
    <h2 style="font-weight: bold; font-size: 47px; margin: 21px;">New Service</h2>
}
else
{
    <h2 style="font-weight: bold; font-size: 47px; margin: 21px;">Edit Service</h2>
}

@using (Html.BeginForm("Save", "Service", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.LabelFor(s => s.Title)
        @Html.TextBoxFor(s => s.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(s => s.Title)
    </div>

    <div class="form-group">
        @Html.LabelFor(s => s.Description)
        @Html.TextAreaFor(s => s.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(s => s.Description)
    </div>
    <div class="form-group">
        @Html.LabelFor(s => s.ImagePath, new { @class = "control-label col-md-2" })
        <input type="file" name="ImageFile"/>
        @Model.ImagePath
        @Html.ValidationMessageFor(s => s.ImagePath)
    </div>
    @Html.HiddenFor(s => s.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-success">Save</button>
}