@model Artist.ViewModels.MainViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_LayoutPage1.cshtml";
}


<!-- Preloader Start -->
<div id="preloader">
    <div class="loader"></div>
</div>
<!-- Preloader End -->
<!-- Home & Menu Section Start -->
<header id="home" class="home-section">

    <div class="header-top-area">
        <div class="container">
            <div class="row">

                <div class="col-sm-3">
                    <div class="logo">
                        @Html.ActionLink("Artist", "Index", "Home")
                    </div>
                </div>

                <div class="col-sm-9">
                    <div class="navigation-menu">
                        <div class="navbar">
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                            </div>
                            <div class="navbar-collapse collapse">
                                <ul class="nav navbar-nav navbar-right">
                                    <li class="active">
                                        <a class="smoth-scroll" href="#home">Home <div class="ripple-wrapper"></div></a>
                                    </li>
                                    <li>
                                        <a class="smoth-scroll" href="#about">About</a>
                                    </li>
                                    <li>
                                        <a class="smoth-scroll" href="#portfolio">Portfolio</a>
                                    </li>
                                    <li>
                                        <a class="smoth-scroll" href="#testimonials">Testimonial</a>
                                    </li>
                                    <li>
                                        <a class="smoth-scroll" href="#services">services</a>
                                    </li>
                                    <li>
                                        <a class="smoth-scroll" href="#contact">Contact</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="home-section-background" style="background: url(@Url.Content(Model.Artist.HeroImagePath)); background-size: cover; " data-stellar-background-ratio="0.6">
        <div class="display-table">
            <div class="display-table-cell">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12 text-center">
                            <div class="header-text">
                                <p>@Model.Artist.HeaderText</p>
                                <h2>I am <span class="typing"></span></h2>

                                <div class="margin-top-60">
                                    <a class="button button-style button-style-icon fa fa-long-arrow-right smoth-scroll" href="#portfolio">View Products</a>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</header>
<!-- Home & Menu Section End-->
<!-- About Start -->
<section id="about" class="about-section">
    <div class="row">
        <div class="col-md-6 col-sm-12 col-xs-12">
            <img class="img-responsive" src="@Url.Content(Model.Artist.AboutImagePath)" draggable="false" alt="">
        </div>

        <div class="col-md-6 col-sm-12 col-xs-12">
            <div class="about-me section-space-padding">
                <h2>About Me.</h2>
                <p>@Model.Artist.AboutText</p>
            </div>
        </div>

    </div>
</section>
<!-- About End -->
<!-- Portfolio Start -->
<section id="portfolio" class="portfolio section-space-padding">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="section-title">
                    <h2>My Portfolio.</h2>
                    <p>@Model.Artist.PortfolioText</p>
                </div>
            </div>
        </div>

        <div class="row">
            <ul class="portfolio">
                <li class="filter" data-filter="all">all</li>
                <li class="filter" data-filter=".@Model.Categories[0].Name.ToLower().Replace(" ", "")">@Model.Categories[0].Name</li>
                <li class="filter" data-filter=".@Model.Categories[1].Name.ToLower().Replace(" ", "")">@Model.Categories[1].Name</li>
                <li class="filter" data-filter=".@Model.Categories[2].Name.ToLower().Replace(" ", "")">@Model.Categories[2].Name</li>
                <li class="filter" data-filter=".@Model.Categories[3].Name.ToLower().Replace(" ", "")">@Model.Categories[3].Name</li>
                <li class="filter" data-filter=".@Model.Categories[4].Name.ToLower().Replace(" ", "")">@Model.Categories[4].Name</li>
                <li class="filter" data-filter=".@Model.Categories[5].Name.ToLower().Replace(" ", "")">@Model.Categories[5].Name</li>
            </ul>
        </div>

        <div class="portfolio-inner">
            <div class="row">

                @foreach (var project in Model.Projects)
                {
                    if (project.ImagePath != null)
                    {
                        <div class="col-md-4 col-sm-6 col-xs-12 mix @Model.Categories.Single(c => c.Id == project.CategoryId).Name.ToLower().Replace(" ", "")">


                            <div class="item">
                                <a href="@Url.Content(project.ImagePath)" class="portfolio-popup" title="@project.Title">
                                    <img src="@Url.Content(project.ImagePath)" alt="">
                                </a>
                            </div>

                        </div>
                    }
                }

            </div>
        </div>
    </div>

    <div class="text-center margin-top-50">
        <a class="button button-style button-style-dark button-style-icon fa fa-long-arrow-right smoth-scroll" href="#contact">Let's Discuss</a>
    </div>
</section>
<!-- Portfolio End -->
<!-- Testimonial Start -->
<section id="testimonials" class="testimonial-section section-space-padding">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="section-title">
                    <h2>Testimonials.</h2>
                    <p>@Model.Artist.TestimonialsText</p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="testimonial-carousel-list margin-top-20">

                @foreach (var testimonial in Model.Testimonials)
                {
                    if (testimonial.Name != null && testimonial.FeedBack != null)
                    {

                        <div class="testimonial-word text-center">
                            @if (testimonial.ImagePath != null)
                            {
                                <img src="@Url.Content(testimonial.ImagePath)" width=182 class="img-responsive" alt="client image">
                            }
                            <h2>@testimonial.Name</h2>
                            <p>@testimonial.FeedBack</p>
                        </div>
                    }
                }

            </div>
        </div>
    </div>
</section>
<!-- Testimonial End -->
<!-- Services Start -->
<section id="services" class="services-section section-space-padding">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="section-title">
                    <h2>My Services.</h2>
                    <p>@Model.Artist.ServicesText</p>
                </div>
            </div>
        </div>

        <div class="row">

            @foreach (var service in Model.Services)
            {
                if (service.Title != null && service.Description != null)
                {
                    <div class="col-md-4 col-sm-6">
                        <div class="services-detail">
                            @if (service.ImagePath != null)
                            {
                                <div style="width: 35px;">
                                    <img src="@Url.Content(service.ImagePath)" />
                                </div>
                            }
                            <h3>@service.Title</h3>
                            <hr>
                            <p>@service.Description</p>
                        </div>
                    </div>
                }
            }

        </div>
    </div>
</section>
<!-- Services End -->
<!-- Contact Start -->
<section id="contact" class="contact-us section-space-padding">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="section-title">
                    <h2>Contact Me.</h2>
                    <p>@Model.Artist.ContactText</p>
                </div>
            </div>
        </div>


        <div class="text-center margin-top-10 margin-bottom-50">
            <div class="row">

                <div class="col-md-4 col-sm-4">
                    <div class="contact-us-detail">
                        <i class="fa fa-mobile"></i>
                        <p><a>@Model.Artist.PhoneNumber</a></p>
                    </div>
                </div>

                <div class="col-md-4 col-sm-4">
                    <div class="contact-us-detail">
                        <i class="fa fa-map"></i>
                        <p><a>@Model.Artist.Address</a></p>
                    </div>
                </div>

                <div class="col-md-4 col-sm-4">
                    <div class="contact-us-detail">
                        <i class="fa fa-clock-o"></i>
                        <p style="color:#ffe4af;">@Model.Artist.WorkingPeriod</p>
                    </div>
                </div>

            </div>
        </div>


        <!-- Form Start -->
        <div class="row">
            <div class="col-md-6">
                <div class="row" style="color: #ffecc6;">
                    @using (Html.BeginForm("Save", "ContactMessage"))
                    {
                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.ContactMessage.Name)
                                @Html.TextBoxFor(m => m.ContactMessage.Name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.ContactMessage.Name)
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.ContactMessage.PhoneNumber)
                                @Html.TextBoxFor(m => m.ContactMessage.PhoneNumber, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.ContactMessage.PhoneNumber)
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.ContactMessage.EMail)
                                @Html.TextBoxFor(m => m.ContactMessage.EMail, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.ContactMessage.EMail)
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                @Html.LabelFor(m => m.ContactMessage.Address)
                                @Html.TextBoxFor(m => m.ContactMessage.Address, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.ContactMessage.Address)
                            </div>
                        </div>


                        <div class="col-sm-12">
                            <div class="textarea-message form-group">
                                <div rows="50">
                                    @Html.LabelFor(m => m.ContactMessage.Message)
                                    @Html.TextAreaFor(m => m.ContactMessage.Message, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.ContactMessage.Message)
                                </div>
                            </div>
                        </div>

                        @Html.AntiForgeryToken()
                        <div class="text-center">
                            <button type="submit" class="button button-style button-style-dark button-style-icon fa fa-long-arrow-right text-center">Send</button>
                        </div>

                    }
                    <!-- Form End -->

                </div>
            </div>

                <div class="map-responsive">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d7290565.929801995!2d26.384058407753876!3d26.84482952381161!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14368976c35c36e9%3A0x2c45a00925c4c444!2sEgypt!5e0!3m2!1sen!2seg!4v1635353379612!5m2!1sen!2seg" width="600" height="450" frameborder="0" style="border:0;" allowfullscreen></iframe>
                </div>

        </div>
    </div>

    <div class="margin-top-80">
        <ul class="social-icon">
            <li><a href="@Model.Artist.FacebookLink" target="_blank" class="facebook"><i class="fa fa-facebook"></i></a></li>
            <li><a href="@Model.Artist.TwitterLink" target="_blank" class="twitter"><i class="fa fa-twitter"></i></a></li>
            <li><a href="@Model.Artist.InstagramLink" target="_blank" class="instagram"><i class="fa fa-instagram"></i></a></li>
            <li><a href="@Model.Artist.WhatsappLink" target="_blank" class="whatsapp"><i class="fa fa-whatsapp"></i></a></li>
            <li><a href="@Model.Artist.YoutubeLink" target="_blank" class="youtube"><i class="fa fa-youtube"></i></a></li>
        </ul>
    </div>

</section>
<!-- Contact End -->
<!-- Footer Start -->
<footer class="footer-section">
    <div class="container">
        <div class="row">
            <div class="col-md-4 text-left">
                <p>@Html.ActionLink(Model.Artist.Name + " | Artist", "Index", "Home")</p>
            </div>

            <div class="col-md-4 text-center">
                <p>© Copyright 2021 Artist.</p>
            </div>
            <div class="col-md-4 text-right">
                <p>Website Designed & Coded by <a target="_blank" href="https://www.linkedin.com/in/momenaboessa">Momen Aboessa</a></p>
            </div>
        </div>
    </div>
</footer>
<!-- Footer End -->
<!-- Back to Top Start -->
<a href="#" class="scroll-to-top"><i class="fa fa-angle-up"></i></a>
<!-- Back to Top End -->
<!-- All Javascript Plugins  -->
<script type="text/javascript" src="~/js/jquery.min.js"></script>
<script type="text/javascript" src="~/js/plugin.js"></script>
<script type="text/javascript" src="http://maps.google.com/maps/api/js?key=AIzaSyC0HAKwKinpoFKNGUwRBgkrKhF-sIqFUNA"></script>

<!-- Main Javascript File  -->
<script type="text/javascript" src="~/js/scripts.js"></script>

